<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:layout_gravity="bottom"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <include layout="@layout/toolbar_bottom"
        android:id="@+id/toolbar_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/toolbar"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:pstsPaddingMiddle="true" />

    <android.support.v4.view.ViewPager
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabs"
        android:layout_above="@id/toolbar_bottom"
        tools:context="com.spazz.shiv.rasousvide.MainActivity" />

    <ImageButton
        android:id="@+id/send_button"
        android:layout_width="@dimen/round_button_diameter"
        android:layout_height="@dimen/round_button_diameter"
        android:layout_gravity="end"
        android:layout_above="@id/toolbar_bottom"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-28dp"
        android:layout_marginEnd="@dimen/add_button_margin"
        android:layout_marginRight="@dimen/add_button_margin"
        android:tint="@color/color_accent"
        android:stateListAnimator="@anim/button_ripple"
        android:background="@drawable/oval_ripple"
        android:elevation="@dimen/elevation_high"
        android:src="@drawable/ic_send"
        android:contentDescription="The button that causes the app to send a request to the raspberry pi"/>
    <ImageButton
        android:id="@+id/stop_button"
        android:layout_width="@dimen/round_button_diameter"
        android:layout_height="@dimen/round_button_diameter"
        android:layout_gravity="end"
        android:layout_above="@id/send_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="@dimen/add_button_margin"
        android:layout_marginRight="@dimen/add_button_margin"
        android:tint="@color/DebugRed"
        android:stateListAnimator="@anim/button_ripple"
        android:background="@drawable/oval_ripple"
        android:elevation="@dimen/elevation_high"
        android:src="@drawable/ic_stop"
        android:contentDescription="The button that causes the app to send a request to the raspberry pi"/>

</RelativeLayout>